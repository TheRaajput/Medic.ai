<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eyeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:theme="@style/myStyle"
            app:title="Cataract Diagnostic Centre"
            app:titleTextColor="@android:color/white"
            android:textAlignment="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_bg">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/leftRetina"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Left Eye"
                        android:fontFamily="@font/aclonica"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16dp"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/rightRetina"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@android:color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Right Eye"
                        android:fontFamily="@font/aclonica"/>
                </LinearLayout>
            </GridLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/predButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_pred"
            android:text="@string/run_diagnosis1"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:textAllCaps="false"
            android:fontFamily="@font/aclonica"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"/>
    </LinearLayout>
    <include
        layout="@layout/bottom_sheet"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>