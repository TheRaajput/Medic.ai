<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SplashScreen"
    tools:context=".SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/AnimSplash"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="10dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="1631-healthtap-spinner.json"
            app:lottie_loop="false">
        </com.airbnb.lottie.LottieAnimationView>
    </LinearLayout>
    <TextView
        android:id="@+id/CompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="@string/medic_ai"
        android:fontFamily="@font/tedayslater"
        android:textColor="@android:color/background_dark"
        android:textAlignment="center"
        android:textSize="28sp">
    </TextView>
    <TextView
        android:id="@+id/TagLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diagnosis_at_your_doorstep"
        android:textSize="28sp"
        android:fontFamily="@font/tedayslater"
        android:textColor="@android:color/black"
        android:layout_marginTop="480dp"
        android:textAlignment="center">
    </TextView>
</RelativeLayout>